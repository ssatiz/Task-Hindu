<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="CustomTitlebarBackground">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="CustomTitlebarTheme" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/titlebar</item> 
        <item name="android:windowTitleBackgroundStyle">@style/CustomTitlebarBackground</item>
    </style>
    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>